<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.RuangTenunApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
    </style>

    <style name="Theme.RuangTenunApp" parent="Base.Theme.RuangTenunApp" />

    <style name="BaseTextView" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="BaseInputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="helperTextTextColor">@color/green</item>
    </style>

    <style name="BaseButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="BaseOutlinedButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/light_grey</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="BaseTextTitle" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">16dp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="BaseTextDescription" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ClickableTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>